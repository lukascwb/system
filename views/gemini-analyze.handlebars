<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-robot me-2"></i>
                        Gemini - Produtos Keepa e Google Shopping
                    </h3>
                </div>
                <div class="card-body">
                    <form id="geminiForm" method="GET" action="/gemini-analyze">
                        <div class="mb-4">
                            <label for="keepa_id" class="form-label fw-bold">
                                <i class="fas fa-list me-2"></i>
                                Selecione o Keepa ID:
                            </label>
                            <select class="form-select form-select-lg" id="keepa_id" name="keepa_id" required>
                                <option value="">Escolha um Keepa ID...</option>
                                {{#each keepaIds}}
                                    <option value="{{this}}" {{#if (eq this ../selectedKeepaId)}}selected{{/if}}>{{this}}</option>
                                {{/each}}
                            </select>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-search me-2"></i>
                                Analisar
                            </button>
                        </div>
                    </form>

                    {{#if keepaProducts.length}}
                        {{#each keepaProducts}}
                            <div class="keepa-product-section mb-4">
                                <div class="keepa-header bg-light p-3 rounded">
                                    <h5 class="mb-1">
                                        <i class="fas fa-box me-2"></i>
                                        <strong>Título do produto Keepa:</strong> {{keepa_product}}
                                    </h5>
                                    <p class="mb-0">
                                        <i class="fas fa-dollar-sign me-2"></i>
                                        <strong>Preço atual:</strong> ${{keepa_current}}
                                    </p>
                                </div>
                                
                                {{#if products.length}}
                                    <div class="table-responsive mt-3">
                                        <table class="table table-striped table-hover">
                                            <thead class="table-dark">
                                                <tr>
                                                    <th>Título do produto</th>
                                                    <th>Seller</th>
                                                    <th>Preço</th>
                                                    <th>Link</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each products}}
                                                    <tr>
                                                        <td>
                                                            <small>{{go_shopp_title}}</small>
                                                        </td>
                                                        <td>
                                                            <span class="badge bg-info">{{go_shopp_seller}}</span>
                                                        </td>
                                                        <td>
                                                            <strong class="text-success">${{go_shopp_price}}</strong>
                                                        </td>
                                                        <td>
                                                            <a href="{{go_shopp_link}}" target="_blank" class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-external-link-alt"></i>
                                                                Ver
                                                            </a>
                                                        </td>
                                                    </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                {{else}}
                                    <div class="alert alert-warning mt-3">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        Nenhum produto do Google Shopping encontrado para este item.
                                    </div>
                                {{/if}}
                            </div>
                        {{/each}}
                        
                        <!-- Paginação -->
                        <nav aria-label="Navegação de páginas" class="mt-4">
                            <ul class="pagination justify-content-center">
                                {{#if hasPrevPage}}
                                    <li class="page-item">
                                        <a class="page-link" href="/gemini-analyze?keepa_id={{selectedKeepaId}}&page={{dec currentPage}}">
                                            <i class="fas fa-chevron-left"></i> Anterior
                                        </a>
                                    </li>
                                {{/if}}
                                
                                <li class="page-item active">
                                    <span class="page-link">Página {{currentPage}} de {{totalPages}}</span>
                                </li>
                                
                                {{#if hasNextPage}}
                                    <li class="page-item">
                                        <a class="page-link" href="/gemini-analyze?keepa_id={{selectedKeepaId}}&page={{inc currentPage}}">
                                            Próxima <i class="fas fa-chevron-right"></i>
                                        </a>
                                    </li>
                                {{/if}}
                            </ul>
                        </nav>
                    {{else if selectedKeepaId}}
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Nenhum produto encontrado para o Keepa ID selecionado.
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.card {
    border: none;
    border-radius: 15px;
}

.card-header {
    border-radius: 15px 15px 0 0 !important;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
}

.form-select {
    border-radius: 10px;
    border: 2px solid #e9ecef;
    transition: all 0.3s ease;
}

.form-select:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
}

.btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    border-radius: 10px;
    transition: all 0.3s ease;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
}

.keepa-product-section {
    border: 1px solid #e9ecef;
    border-radius: 10px;
    overflow: hidden;
}

.keepa-header {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border-bottom: 1px solid #dee2e6;
}

.table {
    margin-bottom: 0;
}

.table th {
    border-top: none;
    font-weight: 600;
    font-size: 0.9em;
}

.table td {
    vertical-align: middle;
    font-size: 0.9em;
}

.badge {
    font-size: 0.8em;
}

.btn-sm {
    font-size: 0.8em;
}

.pagination .page-link {
    border-radius: 5px;
    margin: 0 2px;
    border: none;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
}

.pagination .page-item.active .page-link {
    background: linear-gradient(135deg, #495057 0%, #6c757d 100%);
    border: none;
}

.pagination .page-link:hover {
    transform: translateY(-1px);
    box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    transition: all 0.2s ease;
}
</style>

<script>
document.getElementById('keepa_id').addEventListener('change', function() {
    if (this.value) {
        document.getElementById('geminiForm').submit();
    }
});
</script> 